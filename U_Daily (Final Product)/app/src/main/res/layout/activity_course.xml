<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course">

    <Button
        android:id="@+id/rateCourse"
        android:layout_width="164dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:text="Rate the professor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_name" />

    <Button
        android:id="@+id/discussionCourse"
        android:layout_width="164dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:text="discussion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbookinfoCourse" />

    <Button
        android:id="@+id/textbookinfoCourse"
        android:layout_width="164dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="textbook info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateCourse" />

    <Button
        android:id="@+id/checkComment"
        android:layout_width="164dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:text="checkComment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discussionCourse"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:textSize="25sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>