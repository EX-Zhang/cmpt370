<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/all_subject"
        android:layout_width="174dp"
        android:layout_height="99dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="80dp"
        android:text="All Subject"
        app:layout_constraintBottom_toTopOf="@+id/myinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myinfo"
        android:layout_width="174dp"
        android:layout_height="99dp"
        android:layout_marginBottom="337dp"
        android:text="My info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/all_subject"
        app:layout_constraintStart_toStartOf="@+id/all_subject"
        app:layout_constraintTop_toBottomOf="@+id/all_subject" />



</androidx.constraintlayout.widget.ConstraintLayout>